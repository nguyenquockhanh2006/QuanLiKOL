                                        List<MXHvaQLKOL.Models.UngTuyenBvCu> l_ungtuyen = c.UngTuyenBvCus.ToList();
                                    }
                                    @foreach (var b in l_ungtuyen)
                                    {
                                        String avtnut = bbi.ByteToString(b.AccKOL.Avatar);
